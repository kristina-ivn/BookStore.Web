@model IEnumerable<BookStore.Web.Data.Entity.BookGenre>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.IdBook, item.IdGenre}) |
                    @Html.ActionLink("Details", "Details", new { item.IdBook, item.IdGenre }) |
                    @Html.ActionLink("Delete", "Delete", new { item.IdBook, item.IdGenre })
            </td>
        </tr>
}
    </tbody>
</table>
